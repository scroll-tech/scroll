{
  "name": "scroll-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test:hardhat": "npx hardhat test",
    "test:forge": "forge test -vvv",
    "test": "yarn test:hardhat && yarn test:forge",
    "solhint": "./node_modules/.bin/solhint -f table 'src/**/*.sol'",
